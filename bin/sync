#!/bin/bash

rm -rf tmp/solidus versioned_docs/* versioned_sidebars/* docs/* versions.json
touch versioned_docs/.keep versioned_sidebars/.keep

git clone git@github.com:solidusio/edgeguides-content.git tmp/solidus
cd tmp/solidus || exit

# To build additional versions, uncomment the following (e.g., for 3.0):
# git checkout origin/v3.0
# cp -R -- * ../../docs
# yarn run docusaurus docs:version 3.0
# rm -rf ../../docs/*

git checkout master
cp -R -- * ../../docs
